#!/usr/bin/bash

# globals
declare -a root_dir="/home/seang/Dev/Git/Big_Sim/"
declare -a build_dir="${root_dir}build/"
declare -a scripts_dir="${root_dir}scripts/"
declare -a this_isi=2000
declare -a bunny_num=1

# set -x

#commence the automation
cd $build_dir
for i in {0..7}; do # 7 intervals of 250 between ISI 2000 and ISI 250
	for j in {1..7}; do # 7 simulations per isi
		./cbm_sim -b build_file_tune_09262022.bld -o isi_func_bunny_${bunny_num}.sim
		./cbm_sim -i isi_func_bunny_${bunny_num}.sim -e isi_${this_isi}_isi_function.expt --raster PC,all_pc_raster_isi_${this_isi}_sim_${j}.bin
		(( bunny_num++ ))
	done
	(( this_isi -= 250 ))
done
cd $scripts_dir

